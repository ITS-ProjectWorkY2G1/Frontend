@inject IHttpContextAccessor _context
@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Href="/" />
        <MudSpacer />
        @if (!_context.HttpContext!.User.Identity!.IsAuthenticated)
        {
            <MudNavLink Style="margin-left:75vw" Href="Authentication/Login" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.SupervisedUserCircle" IconColor="Color.Inherit">Login</MudNavLink>
        }
        else
        {
            <MudText Style="margin-left:73vw">@_context.HttpContext.User.Identity.Name</MudText>
            <MudNavLink Href="Authentication/Logout" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Logout" IconColor="Color.Inherit"></MudNavLink>
        }

    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">ITS.PW2.Frontend</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}