@inject IHttpContextAccessor _context
@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Dense>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Href="/" />
        <MudSpacer />
        @if (!_context.HttpContext!.User.Identity!.IsAuthenticated)
        {
            <MudNavLink Style="width:fit-content"  Href="Authentication/Login" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.SupervisedUserCircle" IconColor="Color.Inherit">Login</MudNavLink>
        }
        else
        {
            <MudList Clickable="true">
                <MudListItem Text="@_context.HttpContext.User.Identity.Name">
                    <NestedList>
                        <MudListItem Icon="@Icons.Material.Filled.Settings">
                            Settings
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Logout">
                            Logout
                        </MudListItem>
                    </NestedList>
                </MudListItem>
            </MudList>
            @*<MudNavLink Style="width:fit-content" Href="Authentication/Logout" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Logout" IconColor="Color.Inherit"></MudNavLink>*@
        }

    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" ClipMode="DrawerClipMode.Always" Breakpoint="Breakpoint.Xxl">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Earth4Sport</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    bool _isExpanded = true;
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}